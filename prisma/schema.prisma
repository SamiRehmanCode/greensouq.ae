// Prisma schema - uses SQLite for local dev, can be swapped for Vercel Postgres for production
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  password      String     // hashed with bcrypt
  favorites     Favorite[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Favorite {
  id        String   @id @default(cuid())
  songName  String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, songName])
}
